---
import type { HTMLTag } from "astro/types"

interface Props {
  as?: HTMLTag
  class?: string
}

const { as: Tag = "span", class: className } = Astro.props
---

<Tag
  class:list={[
    className,
    "box-blur inline-flex items-center gap-x-1.5 rounded-md px-2 py-1 text-xs text-primary",
  ]}
>
  <slot />
</Tag>
